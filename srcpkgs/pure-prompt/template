# Template file for 'pure-prompt'
pkgname=pure-prompt
version=1.11.0
revision=1
wrksrc="pure-${version}"
depends=zsh
short_desc="Pretty, minimal and fast ZSH prompt"
maintainer="toluschr <toluschr@protonmail.com>"
license="MIT"
homepage="https://github.com/sindresorhus/pure/"
distfiles="https://github.com/sindresorhus/pure/archive/v${version}.tar.gz"
checksum=eb7f347d383ee15217f21d2c18c2414365dca61d8bd9004645330fda549f678b

do_install() {
	vinstall pure.zsh 644 usr/share/zsh/functions/Prompts prompt_pure_setup
	vinstall async.zsh 644 usr/share/zsh/functions/Prompts async
	vlicense license
}
